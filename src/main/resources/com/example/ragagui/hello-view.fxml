<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ragagui.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="urlField" prefWidth="200.0" promptText="Enter URL here"/>
    <Button text="Fetch Images" onAction="#onFetchButtonClicked"/>

    <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0"/>
    <Button text="Download Images" onAction="#onDownloadButtonClicked"/>
</VBox>